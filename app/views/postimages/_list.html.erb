<% postimages.each do |postimage| %>
  <div>
    <%= link_to postimage_path(postimage.id) do %>
      <%= attachment_image_tag postimage, :image %>
    <% end %>
    <p>投稿ユーザー画像:<%= attachment_image_tag postimage.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
    <p>ショップ名:<%= postimage.shop_name %></p>
    <p>説明:<%= postimage.caption %></p>
    <p>ユーザーネーム:<%= postimage.user.name %></p>
    <p><%= link_to"#{postimage.post_comments.count}コメント", postimage_path(postimage.id) %></p>
  </div>
<% end %>
<%= paginate postimages %>